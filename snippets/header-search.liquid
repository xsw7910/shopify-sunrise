<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  integrity="sha512-xkmfV8WknZ2xvV7CXMdY9gV8pTbTnTbjfhb5c20M5fLxSZRnKjIS/VX9PJN1JNy5bq/JK2QgBtZzS2nKjHxllw=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer" />

<div class="bg-white w-full relative z-10 border border-gray-300">
  <div class="relative z-10">
    <form
      class="flex items-center"
      action="/search"
      method="get">
      <input
        type="hidden"
        name="type"
        value="product">
      <input
        class="form-control border-gray-300 focus:border-gray-500  py-2 px-4 block w-full appearance-none leading-normal"
        type="search"
        name="q"
        value="{{ search.terms | escape }}"
        placeholder="Search"
        autocomplete="on" />

      <button class="bg-gradient-to-r text-black w-10 h-10 flex items-center justify-center hover:bg-#FF1000 " type="submit">
        <i class="fa fa-search"></i>
      </button>
    </form>
  </div>

</div>